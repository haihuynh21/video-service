{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "node",
    "outDir": "./dist/worker",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": [
    "src/worker/**/*",
    "src/shared/**/*",
    "src/modules/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
