{
  "name": "video-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "rimraf dist && tsc && npm run prisma:generate && npm run copy-static",
    "lint": "eslint --ext .ts src/",
    "prisma:generate": "prisma generate client",
    "prisma:migrate": "prisma migrate dev",
    "docker:build": "docker build -t video-service .",
    "docker:run": "docker run -p 3000:3000 video-service",
    "deploy": "wrangler pages deploy dist --project-name video-service",
    "pages:deploy": "npm run build && wrangler pages deploy dist --project-name=video-service",
    "copy-static": "cp -r public/* dist/",
    "secret:database": "npx wrangler secret put DATABASE_URL",
    "secret:cf-account": "npx wrangler secret put CLOUDFLARE_ACCOUNT_ID",
    "secret:cf-key": "npx wrangler secret put CLOUDFLARE_ACCESS_KEY_ID",
    "secret:cf-secret": "npx wrangler secret put CLOUDFLARE_SECRET_ACCESS_KEY",
    "secret:cf-bucket": "npx wrangler secret put CLOUDFLARE_R2_BUCKET",
    "secret:cf-url": "npx wrangler secret put CLOUDFLARE_R2_PUBLIC_URL",
    "secret:all": "npm run secret:database && npm run secret:cf-account && npm run secret:cf-key && npm run secret:cf-secret && npm run secret:cf-bucket && npm run secret:cf-url",
    "worker:init-secrets": "npm run secret:all",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.772.0",
    "@aws-sdk/s3-request-presigner": "^3.772.0",
    "@prisma/client": "^6.5.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "multer": "^1.4.5-lts.2",
    "path": "^0.12.7",
    "wrangler": "^4.4.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.11",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20.2.0"
  }
}
